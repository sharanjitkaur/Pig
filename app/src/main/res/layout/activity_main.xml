<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:weightSum="1.0"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="138dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:id="@+id/playerdetails">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/playerdetailsl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Player 1:"
            android:id="@+id/p1text"
            android:layout_weight="0.5"
            android:textColor="#ffbf6400"
            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/p1score"
            android:layout_weight="0.5"
            android:textColor="#ffbf6400"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_below="@+id/p1text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="(0)"
            android:id="@+id/p1tscore"
            android:layout_weight="0.5"
            android:textColor="#ffbf6400"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_below="@+id/p1score"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/playerdetailsr">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Player 2:"
            android:id="@+id/p2text"
            android:layout_weight="0.5"
            android:textColor="#ffbf1659"
            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/p2score"
                android:layout_weight="0.5"
                android:textColor="#ffbf1659"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_below="@+id/p2text"
                android:layout_alignRight="@+id/p2text"
                android:layout_alignLeft="@+id/p2text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/p2tscore"
                android:layout_weight="0.5"
                android:textColor="#ffbf1659"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_below="@+id/p2score"
                android:layout_alignRight="@+id/p2text"
                android:layout_alignLeft="@+id/p2text" />
    </RelativeLayout>
        <!--TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/p1score"
            android:layout_weight="0.5"
            android:textColor="#ffbf6400"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_below="@+id/p1text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/p2score"
            android:layout_weight="0.5"
            android:textColor="#ffbf1659"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_below="@+id/p1text"
            android:layout_toRightOf="@+id/p1text"
            android:layout_alignRight="@+id/p2text"
            android:layout_alignEnd="@+id/p2text" /-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"
        android:paddingBottom="0dp">

        <FrameLayout
            android:id="@+id/die1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingBottom="0dp"
            android:background="@drawable/die_face_1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </FrameLayout>
        <FrameLayout
            android:id="@+id/die2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/die_face_6"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

        </FrameLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/lfiller1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" "
            android:id="@+id/fillert1"
            android:layout_weight="0.5"
            android:textColor="#ffbf0d05"
            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/playerturnt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Player 1's Turn:"
            android:id="@+id/pturntext"
            android:layout_weight="0.5"
            android:textColor="#ffbf6400"
            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonlayoutparent"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.3">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="@string/roll"
            android:id="@+id/rollbutton"
            android:textSize="50sp"
            android:textColor="@color/button_text"
            android:background="@drawable/large_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="Hold"
            android:id="@+id/holdbutton"
            android:textSize="50sp"
            android:textColor="@color/button_text"
            android:background="@drawable/large_button"
            android:layout_alignBottom="@+id/rollbutton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/playerroundt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Round Score:"
            android:id="@+id/proundtext"
            android:layout_weight="0.5"
            android:textColor="#ffbf6400"
            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

</LinearLayout>
